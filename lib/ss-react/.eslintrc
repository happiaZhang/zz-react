{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "react",
    "babel"
  ],
  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  },
  "rules": {
    "comma-dangle": [
      1,
      "only-multiline"
    ],
    "max-len": [
      1,
      180,
      4
    ],
    "arrow-body-style": [
      0
    ],
    "semi": 0,
    "parentheses": 0,
    "generator-star-spacing": 0,
    "space-before-function-paren": 0,
    "react/jsx-no-bind": 0
  },
  "globals": {
    "logger": true,
    "appContext": true
  }
}
